---
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/700.css';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style>
    :root {
        /* color values are defined in hsl */
        --color-text: 0, 0%, 100%;
        --color-background: 4, 79%, 59%;
    }

    html, body, :global(.full-size) {
        width: 100%;
        height: 100%;
    }

    html {
        font-family: Roboto, system-ui, sans-serif;
        font-size: 1rem;

        height: 100%;
        width: 100%;

        color: hsl(var(--color-text));
        background-color: hsl(var(--color-background));
    }

    body {
        margin: 0;
    }

    :global(h1) {
        font-size: 2.8rem;
    }

    :global(h2) {
        font-size: 1.6rem;
    }
</style>

---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Panda885">
    <main class="full-size">
        <div class="content fade-in">
            <h1>Panda885</h1>
            <h2>Coming soon</h2>
        </div>
    </main>
</Layout>

<style>
    .content {
        text-align: center;
    }

    .fade-in {
        transform: translateY(20px);
        opacity: 0;
    }

    main {
        display: flex;

        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h1 {
        margin-bottom: 0;
    }

    h2 {
        color: hsla(var(--color-text), 0.5);
    }
</style>

<script>
    import anime from 'animejs'
    
    window.addEventListener('load', () => {
        anime({
            targets: '.fade-in',
            easing: 'easeOutQuart',
            translateY: [20, 0],
            opacity: [0, 1],
            delay: anime.stagger(200)
        })
    })
</script>

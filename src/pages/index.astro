---
import Layout from '../layouts/Layout.astro';

import CurveLeft from '../components/curve/CurveLeft.astro';
import CurveRight from '../components/curve/CurveRight.astro';
import CurveDivider from '../components/curve/CurveDivider.astro';
---

<Layout title="Pandier">
    <main class="main">
        <section class="landing">
            <CurveLeft />
            <CurveRight />

            <div class="title">
                <h1 class="fade-in">Pandier</h1>
                <h2 class="fade-in chip">Developer</h2>
            </div>
        </section>

        <CurveDivider />

        <section class="introduction">
            <h1>Hey there!</h1>
            <h2 class="introduction-content">
                I'm Pandier! A self taught developer with a wide range of interests
                including game development, graphic design and server management.
            </h2>
        </section>
    </main>
</Layout>

<style lang="scss">
    .main {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .landing {
        height: 50rem;
        width: 100%;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        background-color: var(--color-brand);
    }

    .title {
        padding-top: 8rem;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .fade-in {
        transform: translateY(20px);
        opacity: 0;
    }

    .chip {
        display: block;
        width: fit-content;
        padding-inline: .5em;
        border-radius: .3em;
        color: var(--color-brand);
        background-color: var(--color-text);
        box-shadow: .25em .25em 0 var(--color-shadow);
    }

    .introduction {
        max-width: 80rem;

        padding: 12rem 4rem;

        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;

        .introduction-content {
            color: var(--color-description);

            font-weight: 400;
            text-align: center;
        }
    }
</style>

<script>
    import anime from 'animejs'
    
    window.addEventListener('load', () => {
        anime({
            targets: '.fade-in',
            easing: 'easeOutQuart',
            translateY: [20, 0],
            opacity: [0, 1],
            delay: anime.stagger(200)
        })
    })
</script>
